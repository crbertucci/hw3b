<!-- Place details page -->

<h1><%= @place["name"] %></h1>

<h3>Posts</h3>

<ul>
  <% for entry in @entries %>
    <li>
        <h3><%= entry["title"] %></h3> <%= entry["posted_on"] %>: <%= entry["description"]%>
    </li>
  <% end %>
</ul>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p><a href="/places">Back to All Places</a></p>

<form action="/places/<%= @place["id"] %>" method="post">
  <input type="hidden" name="_method" value="delete">
</form>